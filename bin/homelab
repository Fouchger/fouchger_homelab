#!/usr/bin/env bash
# Filename: bin/homelab
# Description: Interactive CLI entrypoint for fouchger_homelab.

set -Eeuo pipefail
IFS=$'\n\t'

# Anchor off this file so the menu works even when the repo is installed without a .git directory.
REPO_ROOT="${REPO_ROOT:-$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")/.." && pwd -P)}"
export REPO_ROOT

# shellcheck source=lib/modules.sh
source "${REPO_ROOT}/lib/modules.sh"
homelab_load_lib
homelab_load_modules

main_menu
